#!/usr/bin/env bash
set_common_vars() {
  arch="$1"
  gem5="$2"
  root_dir="$(pwd)"
  buildroot_dir="${root_dir}/buildroot"
  arch_dir="$arch"
  if "$gem5" && [ ! "$arch" = aarch64 ]; then
    arch_dir="${arch}-gem5"
  fi
  out_dir="${buildroot_dir}/output.${arch_dir}~"
  config_file="${out_dir}/.config"
  images_dir="${out_dir}/images"
}
