#!/usr/bin/env bash
set -eu
. common
set -- ${cli_runtc:-} "$@"
while getopts a:gh OPT; do
  case "$OPT" in
    a)
      arch="$OPTARG"
      ;;
    h)
      printf "Usage: $0 TOOL [TOOL_ARGS]...
Call a built ToolChain tool. Example:

    $0 -a arm readelf -h
" 2>&1
      exit 0
      ;;
  esac
done
shift "$(($OPTIND - 1))"
tool="$1"
shift
set_common_vars "$arch"
"${buildroot_out_dir}/host/bin/"*-buildroot-*"${tool}" "$@"
exit "$?"
