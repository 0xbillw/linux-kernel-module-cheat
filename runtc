#!/usr/bin/env bash
set -eu
. "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/common"
set -- ${cli_runtc:-} "$@"
while getopts a:gh OPT; do
  case "$OPT" in
    a)
      common_arch="$OPTARG"
      ;;
    h)
      printf "Usage: $0 TOOL [TOOL_ARGS]...
Call a built ToolChain tool. Example:

    $0 -a arm readelf -h
" 2>&1
      exit 0
      ;;
  esac
done
shift "$(($OPTIND - 1))"
tool="$1"
shift
common_setup
"${common_buildroot_out_dir}/host/bin/"*-buildroot-*"${tool}" "$@"
exit "$?"
